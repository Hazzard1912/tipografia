---
import { Image } from 'astro:assets';
import { Icon } from "astro-icon/components";
import gsap from "gsap";
---

<section id="portafolio" class="py-32 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
        <div class="mb-16 text-center">
            <span class="inline-block px-4 py-1 mb-4 text-sm font-semibold text-primary bg-primary/10 rounded-full">Nuestro Trabajo</span>
            <h2 class="font-heading text-4xl md:text-5xl xl:text-6xl font-bold text-neutral-dark mb-6 leading-tight">
                Proyectos que <span class="text-primary">Cobran Vida</span>
            </h2>
            <p class="text-center font-sans text-lg text-neutral max-w-2xl mx-auto">
                Exploramos los límites del diseño y la creatividad para entregar soluciones que destacan.
                Cada proyecto refleja nuestra pasión por la excelencia.
            </p>
        </div>

        <div id="portfolio-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            <!-- Project 1 -->
            <div class="portfolio-item group relative overflow-hidden rounded-2xl shadow-xl bg-white hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                <img 
                    src="https://images.unsplash.com/photo-1600132806608-231446b2e7af?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80" 
                    alt="Diseño de interiores moderno" 
                    class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 p-6 z-20 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white">Diseño Interior Contemporáneo</h3>
                    <p class="text-gray-200 mt-2">Renovación completa con enfoque minimalista</p>
                </div>
            </div>

            <!-- Project 2 -->
            <div class="portfolio-item group relative overflow-hidden rounded-2xl shadow-xl bg-white hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                <img 
                    src="https://images.unsplash.com/photo-1618219740975-d40978bb7378?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
                    alt="Arquitectura moderna" 
                    class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 p-6 z-20 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white">Fachada Vanguardista</h3>
                    <p class="text-gray-200 mt-2">Diseño estructural con materiales sostenibles</p>
                </div>
            </div>

            <!-- Project 3 -->
            <div class="portfolio-item group relative overflow-hidden rounded-2xl shadow-xl bg-white hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                <img 
                    src="https://images.unsplash.com/photo-1600607687920-4e2a09cf159d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
                    alt="Sala de estar moderna" 
                    class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 p-6 z-20 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white">Espacios Habitables</h3>
                    <p class="text-gray-200 mt-2">Rediseño integral para mayor confort</p>
                </div>
            </div>

            <!-- Project 4 -->
            <div class="portfolio-item group relative overflow-hidden rounded-2xl shadow-xl bg-white hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                <img 
                    src="https://images.unsplash.com/photo-1600566752355-35792bedcfea?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
                    alt="Cocina moderna" 
                    class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 p-6 z-20 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white">Cocina Funcional</h3>
                    <p class="text-gray-200 mt-2">Optimización de espacios con tecnología integrada</p>
                </div>
            </div>

            <!-- Project 5 -->
            <div class="portfolio-item group relative overflow-hidden rounded-2xl shadow-xl bg-white hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                <img 
                    src="https://images.unsplash.com/photo-1594032199207-88a0312a9526?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
                    alt="Edificio comercial" 
                    class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 p-6 z-20 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white">Edificio Corporativo</h3>
                    <p class="text-gray-200 mt-2">Diseño que refleja la identidad empresarial</p>
                </div>
            </div>

            <!-- Project 6 -->
            <div class="portfolio-item group relative overflow-hidden rounded-2xl shadow-xl bg-white hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                <img 
                    src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
                    alt="Casa moderna" 
                    class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 p-6 z-20 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white">Residencia Exclusiva</h3>
                    <p class="text-gray-200 mt-2">Diseño personalizado con vistas panorámicas</p>
                </div>
            </div>
        </div>

       <div class="flex justify-center mt-16">
            <a
                href="/portafolio"
                class="bg-primary hover:bg-primary-dark text-white py-4 px-8 rounded-full text-lg font-bold transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 inline-flex items-center gap-2"
            >
                Ver Más Proyectos
                <Icon name="arrow-right" width="20" height="20" />
            </a>
        </div>
    </div>
</section>

<script>
    if (typeof window !== "undefined") {
        // Import both gsap and ScrollTrigger
        Promise.all([
            import("gsap"),
            import("gsap/ScrollTrigger")
        ]).then(([{ default: gsap }, { ScrollTrigger }]) => {
            // Register ScrollTrigger plugin
            gsap.registerPlugin(ScrollTrigger);
            
            // Main heading animation
            gsap.from("#portafolio h2", {
                scrollTrigger: {
                    trigger: "#portafolio h2",
                    start: "top 85%",
                },
                opacity: 0,
                y: 30,
                duration: 0.8,
                ease: "power3.out"
            });
            
            // Subtitle animation
            gsap.from("#portafolio p.text-center", {
                scrollTrigger: {
                    trigger: "#portafolio p.text-center",
                    start: "top 85%",
                },
                opacity: 0,
                y: 20,
                duration: 0.8,
                delay: 0.2,
                ease: "power3.out"
            });
            
            // Portfolio items animation with stagger effect
            const portfolioItems = gsap.utils.toArray(".portfolio-item");
            portfolioItems.forEach((item, i) => {
                // Explicitly type the item as HTMLElement
                const element = item as HTMLElement;
                gsap.from(element, {
                    scrollTrigger: {
                        trigger: element,
                        start: "top 85%",
                    },
                    y: 60,
                    opacity: 0,
                    duration: 0.8,
                    delay: i % 3 * 0.15, // Stagger in groups of 3
                    ease: "power3.out",
                });
            });
        }).catch(e => console.error("Error initializing animations:", e));
    }
</script>
