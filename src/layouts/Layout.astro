---
import Footer from "../shared/Footer.astro";
import Navbar from "../shared/Navbar.astro";
import WhatsappButton from "../components/WhatsappButton.astro";
import "../styles/global.css";

import { ClientRouter } from "astro:transitions";

interface Props {
	title?: string;
	metaTitle?: string;
	description?: string;
	url?: string;
	canonical?: string;
	keywords: string[];
	ogImage?: string; // Nueva prop para imagen personalizada
}

const {
	title = "Imprenta y Litografía en Cali - Jose Albeiro Hernández",
	metaTitle = "Imprenta y Litografía en Cali - Jose Albeiro Hernández",
	description = "Servicios profesionales de impresión, litografía, tipografía y diseño gráfico en Cali. Calidad, rapidez y atención personalizada para tus proyectos.",
	url = "https://www.litografiaalbeiro.com/",
	canonical = "https://www.litografiaalbeiro.com/",
	keywords,
	ogImage = "https://www.litografiaalbeiro.com/og-image.avif", // Imagen por defecto
} = Astro.props;

const baseKeywords = [
	"imprenta Cali",
	"litografía Cali",
	"tipografía Cali",
	"impresión profesional",
	"diseño gráfico Cali",
	"Jose Albeiro Hernández",
];

const allKeywords = [...new Set([...baseKeywords, ...(keywords || [])])];
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- SEO -->
		<meta name="author" content="Jose Albeiro Hernández" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />

		<!-- Primary Meta Tags -->
		<meta name="title" content={metaTitle} />
		<meta name="description" content={description} />
		<meta name="keywords" content={allKeywords.join(", ")} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={url} />
		<meta property="og:title" content={metaTitle} />
		<meta property="og:description" content={description} />
		<!-- Cambiar a ogImage -->
		<meta property="og:image" content="/og-image.avif" />
		
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:type" content="/og-image.avif" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={url} />
		<meta property="twitter:title" content={metaTitle} />
		<meta property="twitter:description" content={description} />
		<!-- Cambiar a ogImage -->
		<meta property="twitter:image" content="/og-image.avif" />
		<meta property="twitter:image:alt" content="Logo de Imprenta y Litografía Jose Albeiro Hernández" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonical} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

		<!-- Schema.org structured data -->		
		<script type="application/ld+json" is:inline>
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Litografía y Tipografía Jose Albeiro Hernández",
				"url": "https://www.litografiaalbeiro.com/",
				"logo": "https://www.litografiaalbeiro.com/og-image.avif",
				"contactPoint": [{
					"@type": "ContactPoint",
					"telephone": "+57-310-433-6900",
					"contactType": "customer service",
					"areaServed": "CO",
					"availableLanguage": ["Spanish"]
				}]
			}
		</script>

		<ClientRouter />
	</head>
	<body class="antialiased bg-gray-50 text-gray-900 font-sans">
		<Navbar />
		<WhatsappButton />
		<slot />
		<Footer />
	</body>
</html>
